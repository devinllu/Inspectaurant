<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        android:id="@+id/layout">

    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_list"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/list_icon" />

    <ImageView
        android:id="@+id/ic_location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/ic_list"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_location" />

    <ImageView
        android:id="@+id/ic_favourites"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ic_location"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_favourites_icon" />

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/ic_list"
        android:layout_alignParentRight="false"
        android:layout_marginTop="7dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/ic_list"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_search_black_24dp" />
</RelativeLayout>
