<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/item_numNonCritical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_numCritical"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView10"
        android:text="@string/na" />

    <ImageView
        android:id="@+id/item_restaurantLogo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/ic_location" />

    <ImageView
        android:id="@+id/item_hazard"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@id/item_restaurantLogo"
        app:srcCompat="@android:drawable/presence_online" />

    <TextView
        android:id="@+id/item_restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/item_restaurantLogo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_restaurantLogo"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/item_hazard"
        android:text="@string/num_critical" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/item_hazard"
        android:text="@string/num_non_critical" />

    <ImageView
        android:id="@+id/item_favourite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/item_numCritical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView9"
        android:text="@string/na" />

    <TextView
        android:id="@+id/item_lastInspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_numCritical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/na" />
</RelativeLayout>
